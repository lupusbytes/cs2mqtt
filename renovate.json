{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "packageRules": [
    {
      "description": "Use fix commit message prefix for updates in src directory",
      "packagePatterns": ["*"],
      "matchFileNames": ["src/**"],
      "semanticCommitType": "fix"
    },
    {
      "matchSourceUrls": ["https://github.com/dotnet/MQTTnet"],
      "groupName": "mqttnet"
    }
  ]
}