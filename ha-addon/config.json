{
  "name": "cs2mqtt",
  "version": "1.10.0",
  "slug": "cs2mqtt",
  "description": "Counter-Strike 2 Game State Integration to MQTT bridge",
  "url": "https://github.com/lupusbytes/cs2mqtt",
  "startup": "application",
  "arch": [
    "aarch64",
    "amd64"
  ],
  "services": [
    "mqtt:want"
  ],
  "hassio_api": true,
  "legacy": true,
  "ports": {
    "8080/tcp": 5000
  },
  "ports_description": {
    "8080/tcp": "Game State API port"
  },
  "options": {
    "GameState__IgnoreSpectatedPlayers": true,
    "SUPERVISOR_OVERRIDE_MQTT_CONFIG": true
  },
  "schema": {
    "GameState__IgnoreSpectatedPlayers": "bool",
    "SUPERVISOR_OVERRIDE_MQTT_CONFIG": "bool",
    "GameState__TimeoutInSeconds": "float?",
    "GameState__TimeoutCleanupIntervalInSeconds": "float?",
    "Logging__LogLevel__Default": "list(Debug|Information|Warning)?",
    "MQTT__Host": "str?",
    "MQTT__Port": "int?",
    "MQTT__UseTLS": "bool?",
    "MQTT__Username": "str?",
    "MQTT__Password": "password?",
    "MQTT__ClientId": "str?",
    "MQTT__ProtocolVersion": "list(5.0.0|3.1.1|3.1.0)?"
  },
  "watchdog": "http://[HOST]:[PORT:8080]/alive",
  "image": "ghcr.io/lupusbytes/cs2mqtt"
}
